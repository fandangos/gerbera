# Profile for gerbera development
include(default)
include(./common)

[settings]
build_type=Debug
cmake:build_type=Release

[options]
# Use shared libraries for faster link time
*:shared=True
gerbera:debug_logging=True
gerbera:tests=True
gerbera:systemd=False

[env]
CXXFLAGS=-Og -Werror -Wall
# Requires CMake >= 3.17
CMAKE_EXPORT_COMPILE_COMMANDS=ON
